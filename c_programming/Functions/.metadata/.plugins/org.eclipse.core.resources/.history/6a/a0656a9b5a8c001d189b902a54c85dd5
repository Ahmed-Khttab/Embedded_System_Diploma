	gets(c);

	printf("enter the sentec = %s\n",c);
	printf("enter the lengh sentec = %d\n",strlen(c));
	int y;
	y = strlen(c);
	printf("the y = %d\n",y);


	for(int x =0;x<strlen(c);x++)
	{
		if(y>=0)
