#include <stdio.h>

int main()
{
	int num;
	int sum=0;
	int x;
	printf("Enter the number = ");
	fflush(stdin);
	fflush(stdout);
	scanf("%d",&num);
	//-----------------------------
	while(num !=0)
	{
		x =num%10;
		num = num/10;
		sum = sum +x;
	}

}
