#include <stdio.h>
#include <string.h>

int main()
{
	char sen[100];
	printf("Enter the sentence = ");
	fflush(stdin);
	fflush(stdout);
	gets(sen);

	printf("the len is = %d ",strlen(sen));
	printf("the size of = %d ",sizeof(sen));
	int x;
	for(x=0;sen[x] !=' ';x++)
	{
		printf("\n %c",sen[x]);
	}
	printf("\nthe number is %d",x);
	x++;
	for(;sen[x] !=' ';x++)
	{
		printf("\n %c",sen[x]);
	}
}
